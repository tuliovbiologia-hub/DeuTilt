<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deu Tilt"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Indicador Jogador 1 -->
    <LinearLayout
        android:id="@+id/layoutPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador 1"
            android:textSize="18sp"
            android:textColor="#FFD700"
            android:textStyle="bold" />

        <View
            android:id="@+id/indicatorPlayer1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="#757575" />
    </LinearLayout>

    <!-- Indicador Jogador 2 -->
    <LinearLayout
        android:id="@+id/layoutPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador 2"
            android:textSize="18sp"
            android:textColor="#00CED1"
            android:textStyle="bold" />

        <View
            android:id="@+id/indicatorPlayer2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="#757575" />
    </LinearLayout>

    <!-- Área do Jogo (GameView customizado) -->
    <FrameLayout
        android:id="@+id/gameContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutPlayer1"
        app:layout_constraintBottom_toTopOf="@id/layoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Controles -->
    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Botões de Ação -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resetar"
                android:textSize="16sp"
                android:backgroundTint="#757575" />
        </LinearLayout>

        <!-- Controle de Velocidade -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo (segundos):"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn4s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4s"
                android:minWidth="60dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn6s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6s"
                android:minWidth="60dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn8s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8s"
                android:minWidth="60dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn10s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10s"
                android:minWidth="60dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>